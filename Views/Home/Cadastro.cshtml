@model Convidado
<html>
<body>
  <div id="area">
    <form id="formulario" method="POST">
      <fieldset>
        <legend>Cadastrar-se Na Festa</legend><br>
        <!-- nome -->
        <p> 
            <label asp-for="Nome">Nome:</label>
            <input class="campo_nome" asp-for="Nome"><br>
        </p>
        <!-- idade -->
        <p>
            <label asp-for="Idade">Idade:</label>
            <input class="campo_idade" asp-for="Idade"><br>
        </p>
        <!-- telefone -->
        <p>
            <label asp-for="Telefone">Telefone:</label>
            <input class="campo_telefone" asp-for="Telefone"><br>
        </p>
        
        <!-- confirmar presença -->
            <p>
                <label asp-for="ConfirmaPresenca">Confirmar:</label>
                <label class="campo_confirma" asp-for="ConfirmaPresenca">
                Sim: @Html.RadioButton("ConfirmaPresenca","sim") 
                Não: @Html.RadioButton("ConfirmaPresenca","nao")
                </label><br>
            </p>
            <!-- botão cadastrar -->
            <p>
                <input class="btn_submit" type="submit" value="Cadastrar">
            </p>
      </fieldset>
    </form>
  </div>
</body>
</html>